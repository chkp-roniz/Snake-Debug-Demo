{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üêç Snake: Manual Mode",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "args": ["--manual"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYGAME_HIDE_SUPPORT_PROMPT": "1"
